@startuml
!include style.puml
skinparam arrowThickness 1.1
skinparam arrowColor UI_COLOR_T4
skinparam classBackgroundColor UI_COLOR

'==== Packages ====
package UI <<Rectangle>>{
Interface Ui <<Interface>>
Class "{abstract}\nUiPart" as UiPart
Class UiManager
Class MainWindow
Class CommandBox
Class CalendarPanel
Class ListPanel
Class LogPanel
Class PopUpBox
}

package Logic <<Rectangle>> {
}

package List <<Rectangle>> {
}

package Calendar <<Rectangle>> {
}

package Log <<Rectangle>> {
}

Class HiddenOutside #FFFFFF
HiddenOutside ..> Ui

'==== UiManager ====
UiManager .left.|> Ui
UiManager -down-> MainWindow
UiManager -right-> Logic

'==== MainWindow ====
MainWindow *-down-> CommandBox
MainWindow *-down-> ListPanel
MainWindow *-down-> CalendarPanel
MainWindow *-down-> LogPanel
MainWindow *-down-> PopUpBox

MainWindow -|> UiPart
MainWindow -right-> Logic

'==== CommandBox ====
CommandBox -down-|> UiPart

'==== CalendarPanel ====
CalendarPanel -down--|> UiPart
CalendarPanel -down..> Calendar

'==== ListPanel ====
ListPanel -down--|> UiPart
ListPanel -down..> List

'==== LogPanel ====
LogPanel -down--|> UiPart
LogPanel -down..> Log

'==== PopUpBox ====
PopUpBox -down--> UiPart

'==== Positioning ====
MainWindow -[hidden]-|> UiPart
MainWindow -[hidden]-|> UiPart

@enduml
